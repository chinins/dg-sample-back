  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext mjs --fix .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medfreeman/dg-sample-back.git"
  },
  "author": "Mehdi Lahlou <mlahlou@protonmail.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medfreeman/dg-sample-back/issues"
  },
  "homepage": "https://github.com/medfreeman/dg-sample-back#readme",
  "engines": {
    "node": "10.x"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-i-am-meticulous": "^11.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "globalReturn": false
      }
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base",
      "i-am-meticulous",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "babel",
      "prettier"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "parser": "babylon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.mjs": [
      "eslint --ext mjs --fix",
      "git add"
    ]
  }
}
