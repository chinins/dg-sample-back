{
  "name": "dg-sample-back",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext js,mjs --ignore-path .gitignore --fix .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "api:build": "run-s webpack:build",
    "api:start": "run-s node:start",
    "api:watch": "run-p webpack:watch node:watch",
    "webpack:build": "webpack --config-register esm",
    "webpack:watch": "webpack --config-register esm --watch",
    "node:start": "node dist/index.js",
    "node:watch": "nodemon dist/index.js",
    "build": "cross-dotenv docker-compose build",
    "start": "cross-dotenv docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medfreeman/dg-sample-back.git"
  },
  "author": "Mehdi Lahlou <mlahlou@protonmail.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medfreeman/dg-sample-back/issues"
  },
  "homepage": "https://github.com/medfreeman/dg-sample-back#readme",
  "engines": {
    "node": "10.x"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "cross-dotenv": "^1.0.4",
    "dotenv": "^6.1.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-i-am-meticulous": "^11.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "esm": "^3.0.84",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          },
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "globalReturn": false
      }
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base",
      "i-am-meticulous",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "babel",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "parser": "babylon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.mjs": [
      "eslint --ext js,mjs --fix",
      "git add"
    ]
  }
}
